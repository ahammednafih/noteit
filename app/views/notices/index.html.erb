<%= stylesheet_link_tag 'notice' %>
<h2 class="text-center">Notes</h2>
<button class="new-notice btn btn-dark">
    <%= link_to '', new_notice_path, :class => 'fa fa-plus', :style => 'color: white;' %>
</button>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <div class="card-columns">
            <% @notices.each do |notice| %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center" style="border-bottom: 1px solid #ccc; padding: 0 0 10px 0;"><%=h notice.title %></h5>
                    <p class="card-text"><%= sanitize notice.content %></p>
                    <div class="text-center row" style="border-top: 1px solid #ccc; padding: 10px 0 0 0; justify-content: center;">

                        <button class="btn btn-dark" style="margin: 20px 10px 0px; padding: 10px;"><%= link_to '', notice, :class => 'card-link fa fa-eye', :style => 'color: white;' %> </button>
                        <button class="btn btn-dark" style="margin: 20px 10px 0px; padding: 10px;"> <%= link_to '', edit_notice_path(notice), :class => 'card-link fa fa-pencil', :style => 'color: white;' %></button>
                        <button class="btn btn-dark" style="margin: 20px 10px 0px; padding: 10px;"> <%= link_to '', notice, :confirm => 'Are you sure?', :method => :delete, 
                                :class => 'card-link fa fa-trash-o', :style => 'color: white;' %></button>

                    </div>
                </div>
            </div>

            <% end %>
        </div>
    </div>
</div>
